<h1 class="header">Login Page</h1>

<div class="login">
    <%= form_for @user, url: sessions_path, method: :post do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>

    <p>
        <%= f.submit "Login" %>
        Or <%= link_to(controller: 'users', action: 'new') {'Sign up'} %>
    </p>

    <% end %>
</div>
